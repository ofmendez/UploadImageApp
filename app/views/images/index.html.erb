<h1>Imagenes</h1>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Nombre</th>
	<th>Creada el</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
	<td><%= image_tag image.image.thumb.url %></td>
        <td><%= if image.image.length > 17 then '...'else '' end +image.image.to_s[-17..-1] %></td>
	      <td><%= image.created_at %></td>
        <td><%= link_to 'Ver', image, class:"btn" %></td>
        <td><%= link_to 'Editar', edit_image_path(image) , class:"btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

