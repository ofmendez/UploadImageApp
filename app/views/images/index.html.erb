  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
	<td><%= image_tag image.image.thumb.url %></td>
        <td><%= image.image.url %></td>
        <td><%= link_to 'Ver', image, class:"btn" %></td>
        <td><%= link_to 'Editar', edit_image_path(image) , class:"btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

